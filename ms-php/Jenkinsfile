pipeline {
    agent any
    stages {
        stage('checkout code') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/error404100230/php-docker']])
          
            }
        }
        stage('build image') {
            steps {
                      sh 'docker build -t vinsovann847/php .'
            }
        }
        stage('push image to hub') {
            steps {
              withCredentials([string(credentialsId: 'docker-hub-id', variable: 'hubpwd')]) {
                  sh 'docker login -u vinsovann847 -p ${hubpwd}'
              }
              
              sh 'docker push vinsovann847/php:latest'
            }
        }
    }
}
